<%- include('./partials/header.ejs') %>
<div class="w-full min-h-screen px-10 py-5 text-white bg-zinc-800">
  <h1 class="text-xl text-zinc-100 font-semibold">Forgot Password</h1>
  <hr class="opacity-10 mt-2 ">
  <form action="/forgot-password" method="post">
    <input class="block w-1/3 px-3 py-2 border-2 rounded-md mb-2 text-zinc-800" type="email" name="email" placeholder="Enter your email" required>
    <input class="block w-1/3 px-3 py-2 rounded-md bg-red-600" type="submit" value="Send Reset Link">
  </form>
  <p class="mt-4">Remembered your password? <a href="/" class="text-red-500">Login</a></p>
</div>
