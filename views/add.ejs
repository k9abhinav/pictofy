<%- include ./partials/header.ejs %>
    <div class="w-full min-h-screen px-10 py-5 text-white  bg-zinc-800">
        <h1 class="text-xl text-zinc-100 font-semibold">Create new post.</h1>
        <hr class="opacity-10 mt-2 ">
        <form action="/createpost" method="post" enctype="multipart/form-data" >
            <input class="block w-1/3 px-3 py-2  "type="file" name="postImage">
            <input class="block w-1/3 px-3 py-2 border-2 rounded-md mb-2 text-zinc-800" type="text" placeholder="Title" name="title">
            <textarea class="block w-1/3 px-3 py-2 border-2 rounded-md mb-2 h-60 text-zinc-800"type="text" placeholder="Description" name="description"></textarea>
            <input class="block w-1/3 px-3 py-2  rounded-md bg-red-600" type="submit">

        </form>
    </div>
