<%- include ./partials/header.ejs %>
    <div class="profile w-full min-h-screen bg-zinc-800 pt-1 px-10 text-white">
        <form hidden id="uploadform" action="/fileupload" method="post" enctype="multipart/form-data">
            <input type="file"  name="image">
        </form>
        <div class="profile-details flex flex-col items-center justify-center mt-10 ">
            <div class="relative ">
                <span id="uploadicon" class="w-8 h-8 absolute bottom-0 right-0 rounded-full flex items-center justify-center bg-white">
                    <i class="cursor-pointer text-zinc-800 ri-pencil-fill"></i></span>
                <div class="w-32 h-32 bg-zinc-200 rounded-full mt-5 overflow-hidden" >
                    <img src="/images/uploads/<%=  user.profileImage %>" class="w-full h-full object-cover" alt="">
                </div>
            </div>
            <h1 class="text-3xl font-semibold mt-5"><%= user.name %></h1>
            <h3 class="text-md">@<%= user.username %></h3>
            <a href="/edit" class="px-7 py-2 bg-zinc-700 rounded-full mt-5 font-semibold">Edit</a>
            <a href="/add" class="py-3 px-10 font-semibold text-xs rounded-lg bg-red-500 mt-10" >Add new Post</a>
        </div>
        <div class="cards flex flex-wrap gap-10">
            <div class="card">
                <div class="w-52 h-40 bg-zinc-200 rounded-lg  mt-10  overflow-hidden">
                    <img  class="w-full h-full object-cover" src="/images/uploads/<%= user?.posts[0]?.image %>" alt="">
                </div>
                <a href="/show/posts" class=" inline-block text-xl font-semibold mt-3">Your uploaded forms</a>
                <h5 class="text-sm font-medium  opacity-60" ><%= user.posts.length %></h5>
            </div>
            
        </div>
    </div>
    <script>
        document.querySelector("#uploadicon").addEventListener("click" , function(){
            document.querySelector("#uploadform input").click();
        })
        document.querySelector("#uploadform input").addEventListener("change", function(){
            document.querySelector("#uploadform").submit();
        })
    </script>
<%- include ./partials/footer.ejs %>